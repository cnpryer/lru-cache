{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist/cjs",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "target": "ESNext"
      }
  }
  